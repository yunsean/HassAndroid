<?xml version="1.0" encoding="utf-8"?>
<com.dylan.uiparts.recyclerview.SwipeItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_ffffff_eeeeee"
        android:gravity="center"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_remove_red_eye_black_36dp"
            android:contentDescription="@null"/>
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dip"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="15sp"
                android:textColor="#ff555555"
                tools:text="名称"/>
            <TextView
                android:id="@+id/entity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginTop="5dip"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="14sp"
                android:textColor="#ff555555"
                tools:text="名称"/>
            <TextView
                android:id="@+id/where"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginTop="5dip"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/entity"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="14sp"
                android:textColor="#ff555555"
                tools:text="名称"/>
            <TextView
                android:id="@+id/value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginTop="6dip"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/where"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="12sp"
                android:textColor="#ff555555"
                tools:text="名称"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/delete"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="#ffffaaaa"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="16sp"/>
        <Button
            android:id="@+id/disable"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="#ffaaaaff"
            android:text="禁用"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </LinearLayout>

</com.dylan.uiparts.recyclerview.SwipeItemLayout>
