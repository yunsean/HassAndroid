<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/selector_ffffff_eeeeee_round_10dp"
	android:paddingLeft="10dip"
	android:paddingRight="10dip"
	android:paddingTop="5dip"
	android:paddingBottom="5dip"
	android:gravity="center"
	android:orientation="horizontal">

	<FrameLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<ImageView
			android:id="@+id/trackerCircle"
			android:layout_width="30dip"
			android:layout_height="36dip"
			android:contentDescription="@null"
			android:scaleType="centerInside"
			android:src="@drawable/tracker_bg" />

		<android.support.v7.widget.AppCompatTextView
			android:id="@+id/trackerIcon"
			android:layout_width="24dip"
			android:layout_height="24dip"
			android:layout_gravity="center_horizontal|top"
			android:layout_marginTop="2dip"
			android:gravity="center"
			android:padding="0dp"
			android:text="\uF43B"
			android:textColor="@color/color_xiaomi"
			android:textSize="24dip"
			app:fontFamily="@font/mdi"
			tools:ignore="HardcodedText,MissingPrefix,SpUsage" />
		<com.dylan.uiparts.imageview.CircleImageView
			android:id="@+id/trackerPicture"
			android:layout_width="24dip"
			android:layout_height="24dip"
			android:layout_gravity="center_horizontal|top"
			android:layout_marginTop="2dip"
			android:contentDescription="@null"
			android:scaleType="centerInside"/>
	</FrameLayout>
	<android.support.v7.widget.AppCompatTextView
		android:id="@+id/trackerName"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginLeft="10dip"
		android:gravity="center_vertical"
		android:text="@string/app_name"
		android:textColor="@color/color_xiaomi"
		android:textSize="14dip"
		app:fontFamily="@font/dincond" />
</LinearLayout>
