<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffffff">

    <LinearLayout
        android:id="@+id/playerViewPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/playerViewContainer"
            android:layout_width="match_parent"
            android:layout_height="200dip">
            <com.dylan.medias.player.MxPlayerView
                android:id="@+id/playerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"/>
            <LinearLayout
                android:id="@+id/toolbarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:padding="10dip"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/exitFullscreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/titlebar_back"
                    android:drawablePadding="5dip"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="#e2e2e2"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/ptz_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"
                    android:src="@drawable/camera_ptz_indicator_left"
                    android:contentDescription="!null"/>
                <ImageView
                    android:id="@+id/ptz_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:visibility="gone"
                    android:src="@drawable/camera_ptz_indicator_right"
                    android:contentDescription="!null"/>
                <ImageView
                    android:id="@+id/ptz_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"
                    android:src="@drawable/camera_ptz_indicator_up"
                    android:contentDescription="!null"/>
                <ImageView
                    android:id="@+id/ptz_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:visibility="gone"
                    android:src="@drawable/camera_ptz_indicator_down"
                    android:contentDescription="!null"/>
            </FrameLayout>
        </FrameLayout>
        <LinearLayout
            android:id="@+id/playerViewFooter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/play"
                android:layout_width="44dip"
                android:layout_height="44dip"
                android:background="@drawable/selector_hass_camera_action"
                android:src="@drawable/ic_play_arrow_blue_24dp"
                android:contentDescription="@null"/>
            <CheckBox
                android:id="@+id/mute"
                android:layout_width="wrap_content"
                android:layout_height="44dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:layout_marginLeft="10dip"
                android:background="@drawable/selector_hass_camera_action"
                android:button="@null"
                android:drawableLeft="@drawable/ic_mute"
                android:contentDescription="@null"/>
            <ImageButton
                android:id="@+id/full"
                android:layout_width="44dip"
                android:layout_height="44dip"
                android:layout_marginLeft="10dip"
                android:background="@drawable/selector_hass_camera_action"
                android:src="@drawable/ic_zoom_out_map_blue_24dp"
                android:contentDescription="@null"/>
            <View
                android:layout_width="0dip"
                android:layout_height="1dip"
                android:layout_weight="1" />
            <RadioGroup
                android:id="@+id/subStreamPanel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:textSize="12sp"
                    android:textColor="#ffaaaaaa"
                    android:text="子码流"/>
                <RadioButton
                    android:id="@+id/subStream1"
                    android:layout_width="36dip"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_hass_substream"
                    android:gravity="center"
                    android:button="@null"
                    android:checked="true"
                    android:textColor="@color/color_hass_substream"
                    android:textSize="14sp"
                    android:text="1"/>
                <RadioButton
                    android:id="@+id/subStream2"
                    android:layout_width="36dip"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_hass_substream"
                    android:gravity="center"
                    android:button="@null"
                    android:textColor="@color/color_hass_substream"
                    android:textSize="14sp"
                    android:text="2"/>
                <RadioButton
                    android:id="@+id/subStream3"
                    android:layout_width="36dip"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_hass_substream"
                    android:gravity="center"
                    android:button="@null"
                    android:textColor="@color/color_hass_substream"
                    android:textSize="14sp"
                    android:text="3"/>
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/imageViewPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dip">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:contentDescription="@null"
                android:background="@null"/>
            <me.zhanghai.android.materialprogressbar.MaterialProgressBar
                android:id="@+id/progressbar"
                style="@style/Widget.MaterialProgressBar.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:visibility="gone"
                app:mpb_progressStyle="circular"/>
        </FrameLayout>
        <TextView
            android:id="@+id/refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:layout_gravity="right"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:text="刷新"/>
    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/md_white_1000"
        app:tabTextColor="#ffaaaaaa"
        app:tabSelectedTextColor="#ffffffff"
        app:tabMode="scrollable"
        app:tabPadding="0dp"/>
    <com.dylan.uiparts.viewpager.StaticViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
