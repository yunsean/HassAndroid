<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffffff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:textColor="#ff111111"
        android:textSize="14sp"
        android:text="触发时机"/>
    <RadioButton
        android:id="@+id/sunrise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:button="@null"
        android:drawableRight="@drawable/radio_checkbox"
        android:padding="10dip"
        android:checked="true"
        android:textColor="#ff555555"
        android:textSize="14sp"
        android:text="日出"/>
    <RadioButton
        android:id="@+id/sunset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:button="@null"
        android:drawableRight="@drawable/radio_checkbox"
        android:padding="10dip"
        android:textColor="#ff555555"
        android:textSize="14sp"
        android:text="日落"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dip"
        android:background="#fff2f2f2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:textColor="#ff111111"
        android:textSize="14sp"
        android:text="时间偏移"/>
    <TextView
        android:id="@+id/offsetValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/calendar_rightarrow"
        android:drawablePadding="10dip"
        android:background="@drawable/selector_ffffff_eeeeee"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:paddingRight="10dip"
        android:paddingLeft="30dip"
        android:textColor="#ff555555"
        android:textColorHint="#ff999999"
        android:textSize="14sp"
        android:hint="时间偏移量选择"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:paddingLeft="30dip"
        android:paddingRight="10dip"
        android:background="#ffffffff"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="#ff555555"
            android:text="负值"/>
        <com.dylan.uiparts.checkbox.SwitchButton
            android:id="@+id/negativeOffset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:checked="false"
            app:sb_flip="true"/>
    </LinearLayout>

</RadioGroup>
