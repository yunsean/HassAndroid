<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dip"
    android:background="@drawable/selector_ffffff_eeeeee"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/channelIcon"
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/radio_channel_icon"
        android:contentDescription="@null"/>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="10dip"
        android:orientation="vertical">
        <TextView
            android:id="@+id/channelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textSize="14sp"
            android:textColor="#ff333333"
            tools:text="北京交通广播"/>
        <TextView
            android:id="@+id/channelProgram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:lines="1"
            android:textSize="12sp"
            android:textColor="#ff777777"
            tools:text="正在直播  有我陪着你"/>
        <TextView
            android:id="@+id/channelHit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:drawableLeft="@drawable/ic_play_arrow_black_12dp"
            android:drawablePadding="5dip"
            android:lines="1"
            android:textSize="10sp"
            android:textColor="#ff777777"
            tools:text="395.5万人"/>
    </LinearLayout>

    <CheckBox
        android:id="@+id/channelFavor"
        android:layout_width="44dip"
        android:layout_height="44dip"
        android:button="@drawable/shape_clear"
        android:drawableRight="@drawable/ic_xmly_favor"/>

</LinearLayout>
