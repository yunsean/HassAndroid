<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dip"
    android:paddingBottom="10dip"
    android:gravity="center_horizontal"
    android:background="#ffffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_playlist_add_check_black_24dp"
            android:drawablePadding="10dip"
            android:inputType="text"
            android:textSize="14sp"
            android:textColor="#ff555555"
            android:hint="请输入名称"/>
        <LinearLayout
            android:id="@+id/typePanel"
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:background="@drawable/selector_ffffff_eeeeee"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/typeIcon"
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:src="@drawable/ic_trigger_nfc"
                android:contentDescription="@null"/>
            <TextView
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="44dip"
                android:layout_marginLeft="10dip"
                android:drawableRight="@drawable/ic_right_blue_24dp"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="#ff555555"
                android:hint="选择触发事件"/>
        </LinearLayout>
        <TextView
            android:id="@+id/params"
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:background="@drawable/selector_ffffff_eeeeee"
            android:drawableRight="@drawable/ic_right_blue_24dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_blur_on_black_24dp"
            android:drawablePadding="10dip"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="14sp"
            android:textColor="#ff555555"
            android:hint="设定参数"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dip"
            android:background="#fff5f5f5" />
        <TextView
            android:id="@+id/beginTime"
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:background="@drawable/selector_ffffff_eeeeee"
            android:drawableRight="@drawable/ic_right_blue_24dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_av_timer_gray_24dp"
            android:drawablePadding="10dip"
            android:textSize="14sp"
            android:textColor="#ff555555"
            android:hint="生效开始时间（可选）"/>
        <TextView
            android:id="@+id/endTime"
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:background="@drawable/selector_ffffff_eeeeee"
            android:drawableRight="@drawable/ic_right_blue_24dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_access_time_black_24dp"
            android:drawablePadding="10dip"
            android:textSize="14sp"
            android:textColor="#ff555555"
            android:hint="生效结束时间（可选）"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dip"
                android:layout_height="44dip"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_format_align_left_black_24dp"
                android:drawablePadding="10dip"
                android:textSize="14sp"
                android:textColor="#ff555555"
                android:hint="执行后状态栏通知"/>
            <android.support.v7.widget.SwitchCompat
                android:id="@+id/notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:theme="@style/YellowTheme"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dip"
            android:background="#fff5f5f5" />
        <TextView
            android:id="@+id/service"
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:background="@drawable/selector_ffffff_eeeeee"
            android:drawableRight="@drawable/ic_right_blue_24dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_filter_tilt_shift_black_24dp"
            android:drawablePadding="10dip"
            android:textSize="14sp"
            android:textColor="#ff555555"
            android:hint="触发的服务..."/>
        <TextView
            android:id="@+id/choiceService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dip"
            android:padding="5dip"
            android:text="从面板选择..."
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:src="@drawable/ic_code_black_24dp"
                android:contentDescription="@null"/>
            <EditText
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:inputType="textMultiLine"
                android:background="@drawable/shape_round_f2f2f2_1dp_5dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="10dip"
                android:paddingBottom="10dip"
                android:scrollbars="none"
                android:minHeight="150dip"
                android:minLines="5"
                android:gravity="top"
                android:textSize="12sp"
                android:textColor="#ff555555"
                android:hint="请输入调用参数（可选JSON）"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
