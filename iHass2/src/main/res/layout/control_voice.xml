<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dip"
    android:gravity="center"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:src="@drawable/ic_volume_0"
        android:contentDescription="@null"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#ffaaaaaa"
            android:text="发送音量："/>
        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
            android:id="@+id/volume"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:dsb_indicatorColor="@color/md_blue_500"
            app:dsb_max="100"
            app:dsb_min="0"
            app:dsb_progressColor="@color/md_blue_500"
            app:dsb_rippleColor="@color/md_blue_100"
            app:dsb_scrubberHeight="4dp"
            app:dsb_thumbSize="16dp"
            app:dsb_trackColor="@color/md_grey_400"
            app:dsb_trackHeight="4dp"/>
        <TextView
            android:id="@+id/volume_value"
            android:layout_width="30dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="11sp"
            android:textColor="#ffaaaaaa"
            android:text="50"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            tools:ignore="RtlHardcoded">
            <Button
                android:id="@+id/button_close"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="72dp"
                android:text="关闭"
                android:textColor="@color/color_primary"
                app:layout_columnWeight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            tools:ignore="RtlHardcoded">
            <Button
                android:id="@+id/file"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="72dp"
                android:text="播放文件"
                android:textColor="@color/color_primary"
                app:layout_columnWeight="1"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/talk"
                android:layout_width="64dip"
                android:layout_height="64dip"
                android:src="@drawable/hass_voice_small"
                android:contentDescription="@null"/>
            <com.dylan.uiparts.progressbar.RingProgressBar
                style="@style/Widget.MaterialProgressBar.ProgressBar"
                android:id="@+id/uploading"
                android:layout_width="64dip"
                android:layout_height="64dip"
                android:indeterminate="true"
                android:visibility="gone"
                app:rpb_ringWidth="5dip"
                app:rpb_ringColor="#ffeeeeee"
                app:rpb_textSize="13sp"
                app:rpb_ringProgressColor="@color/md_blue_500"/>
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>