<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">
    <cn.com.thinkwatch.ihass2.view.PinchImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"/>
    <ImageView
        android:id="@+id/back"
        android:layout_width="44dip"
        android:layout_height="44dip"
        android:scaleType="center"
        android:src="@drawable/titlebar_back"
        android:contentDescription="@null"/>
    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
        style="@style/Widget.MaterialProgressBar.ProgressBar"
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        app:mpb_progressStyle="circular"/>
    <ImageView
        android:id="@+id/error"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_gravity="center"
        android:visibility="gone"
        android:src="@drawable/ic_baseline_error_outline_orange_24"
        android:contentDescription="@null" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#33000000"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/prev"
            android:layout_width="44dip"
            android:layout_height="44dip"
            android:scaleType="centerInside"
            android:src="@drawable/alumb_preview_prev"
            android:contentDescription="@null"/>
        <ImageView
            android:id="@+id/checked"
            android:layout_width="32dip"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/ic_album_item_24dp"
            android:contentDescription="@null"/>
        <com.dylan.uiparts.viewpager.StaticViewPager
            android:id="@+id/viewPager"
            android:layout_width="0dip"
            android:layout_height="44dip"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/next"
            android:layout_width="44dip"
            android:layout_height="44dip"
            android:scaleType="centerInside"
            android:src="@drawable/alumb_preview_next"
            android:contentDescription="@null"/>
    </LinearLayout>
</FrameLayout>
