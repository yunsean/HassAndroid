<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffededed"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/http"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffaaaaaa"
                android:textSize="14sp"
                android:text="&lt;&lt; 返回常规接入"/>
            <View
                android:layout_width="0dip"
                android:layout_height="1dip"
                android:layout_weight="1" />
            <com.dylan.uiparts.button.SmartImageButton
                android:id="@+id/qrCode"
                android:layout_width="44dip"
                android:layout_height="44dip"
                android:background="@null"
                android:src="@drawable/ic_qr_code"
                android:contentDescription="@null"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#ff999999"
            android:text="MQTT服务器配置"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/brokerPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingBottom="7dip">
            <EditText
                android:id="@+id/broker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@color/darkFontColor"
                android:textColorHint="#ff014a97"
                android:textSize="14sp"
                android:hint="MQTT主机（示例：mqtt.iot.gz.baidubce.com）" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/portPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingBottom="7dip">
            <EditText
                android:id="@+id/port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:inputType="number"
                android:lines="1"
                android:textColor="@color/darkFontColor"
                android:textColorHint="#ff014a97"
                android:textSize="14sp"
                android:hint="MQTT端口（默认为1883）"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/usernamePanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingBottom="7dip">
            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:lines="1"
                android:textColor="@color/darkFontColor"
                android:textColorHint="#ff014a97"
                android:textSize="14sp"
                android:hint="MQTT用户名" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/passwordPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingBottom="7dip">
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:lines="1"
                android:textColor="@color/darkFontColor"
                android:textColorHint="#ff014a97"
                android:textSize="14sp"
                android:hint="MQTT密码"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:paddingLeft="10dip"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#ff999999"
            android:text="MQTT主题配置"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/hassPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingBottom="7dip">
            <EditText
                android:id="@+id/hass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:lines="1"
                android:textColor="@color/darkFontColor"
                android:textColorHint="#ff014a97"
                android:textSize="14sp"
                android:hint="调用Hass Topic（示例：/hass/server）" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/eventPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingBottom="7dip">
            <EditText
                android:id="@+id/event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:lines="1"
                android:inputType="text"
                android:textColor="@color/darkFontColor"
                android:textColorHint="#ff014a97"
                android:textSize="14sp"
                android:hint="事件推送 Topic（示例：/hass/event）"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/selfPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingBottom="7dip">
            <EditText
                android:id="@+id/self"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:lines="1"
                android:inputType="text"
                android:textColor="@color/darkFontColor"
                android:textColorHint="#ff014a97"
                android:textSize="14sp"
                android:hint="Hass应答 Topic（示例：/hass/self）"/>
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:textColor="#ffaaaaaa"
            android:textSize="12sp"
            android:text="        * 如果使用百度IOT物接入MQTT，请无比保证已经在策略中已经创建上述三个主题，并且都被允许发布和订阅。"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:textColor="#ffaaaaaa"
            android:textSize="12sp"
            android:text="        * 如果你有多个设备使用同一个home assistant，请保证每个设备配置了不同的Hass应答Topic。"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="20dip"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#ff999999"
            android:text="数据加密配置"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/keyPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingBottom="7dip">
            <EditText
                android:id="@+id/key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLength="32"
                android:lines="1"
                android:textColor="@color/darkFontColor"
                android:textColorHint="#ff014a97"
                android:textSize="14sp"
                android:hint="加密密匙（请输入3~32个字符）" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/ivPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingBottom="7dip">
            <EditText
                android:id="@+id/iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLength="16"
                android:lines="1"
                android:inputType="text"
                android:textColor="@color/darkFontColor"
                android:textColorHint="#ff014a97"
                android:textSize="14sp"
                android:hint="加密扰码（请输入16个字符）"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:paddingLeft="10dip"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#ff999999"
            android:text="内网自动切换配置（可选）"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/bssidPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingBottom="7dip">
            <EditText
                android:id="@+id/bssid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_right_blue_24dp"
                android:inputType="none"
                android:ellipsize="end"
                android:textColor="@color/darkFontColor"
                android:textColorHint="#ff014a97"
                android:textSize="14sp"
                android:hint="Wifi监视（当连接到这些Wifi后使用内网直连）"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/hassUrlPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingBottom="7dip">
            <EditText
                android:id="@+id/hassUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:lines="1"
                android:textColor="@color/darkFontColor"
                android:textColorHint="#ff014a97"
                android:textSize="14sp"
                android:hint="基础 URL: (示例: http://192.168.2.1:8123)" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/hassPwdPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingBottom="7dip">
            <EditText
                android:id="@+id/hassPwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:lines="1"
                android:inputType="textPassword"
                android:textColor="@color/darkFontColor"
                android:textColorHint="#ff014a97"
                android:textSize="14sp"
                android:hint="Hass访问密码（可选）"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/hassTokenPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingBottom="7dip">
            <EditText
                android:id="@+id/hassToken"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:lines="1"
                android:inputType="text"
                android:textColor="@color/darkFontColor"
                android:textColorHint="#ff014a97"
                android:textSize="14sp"
                android:hint="长效访问令牌（可选）"/>
        </android.support.design.widget.TextInputLayout>

        <com.dylan.uiparts.button.SmartButton
            android:id="@+id/connect"
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:layout_marginTop="20dip"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:gravity="center"
            android:textSize="16sp"
            android:text="@string/hass_connect_connect"
            app:sv_bgcolor_normal="@color/colorPrimary"
            app:sv_bgcolor_pressed="@color/colorPrimary"
            app:sv_txcolor_normal="@color/white"
            app:sv_txcolor_pressed="#ff555555"
            app:sv_cornerRadius="3dip"
            app:sv_shadowEnabled="true"/>
    </LinearLayout>
</ScrollView>
