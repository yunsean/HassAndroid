<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <cn.com.thinkwatch.ihass2.view.UseRatioView
        android:id="@+id/useRatio"
        android:layout_width="match_parent"
        android:layout_height="36dip"
        android:layout_marginTop="10dip"/>
    <LinearLayout
        android:id="@+id/useRatioDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/beginDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#ff999999"
            tools:text="2018-01-01" />
        <TextView
            android:id="@+id/endDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="10sp"
            android:textColor="#ff999999"
            tools:text="2018-01-01"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="8dp">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="4dp"
            android:text="\uf341"
            android:textColor="@color/md_grey_800"
            android:textSize="36dp"
            app:fontFamily="@font/mdi"
            tools:ignore="HardcodedText,MissingPrefix,SpUsage"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/unlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="4dp"
            android:text="\uf340"
            android:textColor="@color/md_grey_800"
            android:textSize="36dp"
            app:fontFamily="@font/mdi"
            tools:ignore="HardcodedText,MissingPrefix,SpUsage"/>
        <LinearLayout
            android:id="@+id/openPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <View
                android:layout_width="1dip"
                android:layout_height="30dp"
                android:layout_margin="15dp"
                android:background="#ffeeeeee" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="4dp"
                android:text="\uf81b"
                android:textColor="@color/md_grey_800"
                android:textSize="36dp"
                app:fontFamily="@font/mdi"
                tools:ignore="HardcodedText,MissingPrefix,SpUsage"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingRight="12dp"
        android:paddingTop="8dp"
        tools:ignore="RtlHardcoded">
        <Button
            android:id="@+id/button_close"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="72dp"
            android:text="关闭"
            android:textColor="@color/md_blue_500"
            app:layout_columnWeight="1"/>
    </LinearLayout>
</LinearLayout>