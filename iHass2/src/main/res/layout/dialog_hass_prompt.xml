<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
  	android:layout_height="wrap_content"
	android:background="#00000000"
  	android:orientation="vertical">
	<TextView
	    android:id="@+id/title"
		android:layout_width="match_parent"
  		android:layout_height="44dip"
  		android:background="@drawable/shape_round_ffffff_10dip_lt_rt"
  		android:gravity="center"
		android:paddingTop="10dip"
		android:visibility="visible"
		android:textColor="#ff333333"
		android:textStyle="bold"
		android:textSize="18sp"
		android:text="@string/app_name" />
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#ffffff">
		<TextView
			android:id="@+id/content"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="15dip"
			android:layout_marginLeft="15dip"
			android:layout_marginRight="15dip"
			android:visibility="visible"
			android:textColor="#ff555555"
			android:textSize="13sp"
			android:text="@string/app_name" />
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="5dip"
		android:paddingBottom="15dip"
		android:background="@color/white">
		<EditText
			android:id="@+id/input"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="15dip"
			android:layout_marginRight="15dip"
			android:minHeight="36dip"
			android:background="@drawable/shape_round_f2f2f2_5dip"
			android:gravity="center"
			android:inputType="text"
			android:visibility="visible"
			android:textColor="#ff555555"
			android:textSize="16sp" />
	</LinearLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="#ffaaaaaa"/>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">	    
		<TextView
			android:id="@+id/cancel"
			android:clickable="true"
			android:layout_width="0dip"
	  		android:layout_height="44dip"
	  		android:layout_weight="1"
	  		android:gravity="center"
			android:background="@drawable/selector_ffffff_eeeeee_round_10dp_lb"
			android:visibility="visible"
			android:textColor="#ff333333"
			android:textSize="14sp"
			android:text="取消" />
		<View 
		    android:layout_width="1px"
		    android:layout_height="match_parent"
		    android:background="#ffaaaaaa"/>
		<TextView
			android:id="@+id/ok"
			android:clickable="true"
			android:layout_width="0dip"
	  		android:layout_height="44dip"
	  		android:layout_weight="1"
	  		android:gravity="center"
			android:background="@drawable/selector_ffffff_eeeeee_round_10dp_rb"
			android:visibility="visible"
			android:textColor="#ff333333"
			android:textSize="14sp"
			android:text="保存" />
	</LinearLayout>
</LinearLayout>
