<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
  	android:layout_height="wrap_content"
	android:gravity="center"
	android:background="@drawable/shape_round_ffffff_10dip"
	android:orientation="vertical">
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="28dip"
		android:gravity="center"
		android:textSize="12sp"
		android:textColor="#ffaaaaaa"
		android:text="文字标签"/>
	<View
		android:layout_width="match_parent"
		android:layout_height="1dip"
		android:layout_marginBottom="10dip"
		android:background="#fff2f2f2"/>
	<com.dylan.uiparts.edittext.CleanableEditText
		android:id="@+id/text"
		android:layout_width="200dip"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:padding="5dip"
		android:background="@null"
		android:inputType="text"
		android:lines="1"
		android:maxLength="5"
		android:textSize="14sp"
		android:textColor="#ff555555"
		android:textColorHint="#ff999999"
		android:hint="请输入1~2字文字标签"/>
	<View
	    android:layout_width="match_parent"
	    android:layout_height="1dip"
		android:layout_marginTop="10dip"
	    android:background="#fff2f2f2"/>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		android:gravity="center"
	    android:orientation="horizontal">	    
		<TextView
			android:id="@+id/cancel"
			android:clickable="true"
			android:layout_width="0dip"
	  		android:layout_height="44dip"
	  		android:layout_weight="1"
	  		android:gravity="center"
			android:background="@drawable/selector_ffffff_eeeeee_round_10dp_lb"
			android:visibility="visible"
			android:textColor="#ff333333"
			android:textSize="14sp"
			android:text="取消" />
		<View 
		    android:layout_width="1dip"
		    android:layout_height="match_parent"
		    android:background="#fff2f2f2"/>
		<TextView
			android:id="@+id/ok"
			android:clickable="true"
			android:layout_width="0dip"
	  		android:layout_height="44dip"
	  		android:layout_weight="1"
	  		android:gravity="center"
			android:background="@drawable/selector_ffffff_eeeeee_round_10dp_rb"
			android:visibility="visible"
			android:textColor="#ff333333"
			android:textSize="14sp"
			android:text="确定" />
	</LinearLayout>
</LinearLayout>
