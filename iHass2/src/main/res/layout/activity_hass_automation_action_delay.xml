<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffffff">

    <RadioButton
        android:id="@+id/modeAt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:button="@null"
        android:drawableRight="@drawable/radio_checkbox"
        android:padding="10dip"
        android:checked="true"
        android:textColor="#ff111111"
        android:textSize="14sp"
        android:text="延迟"/>
    <LinearLayout
        android:id="@+id/atPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_ffffff_eeeeee"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/delay"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableRight="@drawable/calendar_rightarrow"
            android:background="@null"
            android:drawablePadding="10dip"
            android:paddingTop="10dip"
            android:paddingBottom="10dip"
            android:paddingRight="10dip"
            android:paddingLeft="30dip"
            android:textColor="#ff555555"
            android:textSize="14sp"
            android:hint="hh:mm:ss"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/delayTemplate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/color_primary"
            android:textSize="20sp"
            app:fontFamily="@font/mdi"
            tools:text="\uf1d8"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dip"
        android:background="#fff2f2f2" />

    <RadioButton
        android:id="@+id/modePattern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:button="@null"
        android:drawableRight="@drawable/radio_checkbox"
        android:padding="10dip"
        android:textColor="#ff111111"
        android:textSize="14sp"
        android:text="延迟"/>
    <LinearLayout
        android:id="@+id/patternPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dip"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff555555"
                android:textSize="14sp"
                android:text="天："/>
            <EditText
                android:id="@+id/days"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dip"
                android:inputType="text"
                android:textColor="#ff555555"
                android:textColorHint="#ff999999"
                android:textSize="15sp"
                android:hint="days" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/daysTemplate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/color_primary"
                android:textSize="20sp"
                app:fontFamily="@font/mdi"
                tools:text="\uf1d8"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dip"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff555555"
                android:textSize="14sp"
                android:text="小时："/>
            <EditText
                android:id="@+id/hours"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dip"
                android:inputType="text"
                android:textColor="#ff555555"
                android:textColorHint="#ff999999"
                android:textSize="15sp"
                android:hint="hours" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/hoursTemplate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/color_primary"
                android:textSize="20sp"
                app:fontFamily="@font/mdi"
                tools:text="\uf1d8"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dip"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff555555"
                android:textSize="14sp"
                android:text="分钟："/>
            <EditText
                android:id="@+id/minutes"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dip"
                android:inputType="text"
                android:textColor="#ff555555"
                android:textColorHint="#ff999999"
                android:textSize="15sp"
                android:hint="minutes" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/minutesTemplate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/color_primary"
                android:textSize="20sp"
                app:fontFamily="@font/mdi"
                tools:text="\uf1d8"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dip"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff555555"
                android:textSize="14sp"
                android:text="秒钟："/>
            <EditText
                android:id="@+id/seconds"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dip"
                android:inputType="text"
                android:textColor="#ff555555"
                android:textColorHint="#ff999999"
                android:textSize="15sp"
                android:hint="seconds" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/secondsTemplate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/color_primary"
                android:textSize="20sp"
                app:fontFamily="@font/mdi"
                tools:text="\uf1d8"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dip"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff555555"
                android:textSize="14sp"
                android:text="毫秒："/>
            <EditText
                android:id="@+id/milliseconds"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dip"
                android:inputType="text"
                android:textColor="#ff555555"
                android:textColorHint="#ff999999"
                android:textSize="15sp"
                android:hint="milliseconds" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/millisecondsTemplate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/color_primary"
                android:textSize="20sp"
                app:fontFamily="@font/mdi"
                tools:text="\uf1d8"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dip"
            android:background="#fff2f2f2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:padding="10dip"
            android:textColor="#ffaaaaaa"
            android:textSize="12sp"
            android:text="* 两种延迟模式选择一种\n* 实际测试，目前时分秒模式下仍然不支持模板参数"/>
    </LinearLayout>

</RadioGroup>
