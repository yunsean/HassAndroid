<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">
    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"/>
    <FrameLayout
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <me.zhanghai.android.materialprogressbar.MaterialProgressBar
            style="@style/Widget.MaterialProgressBar.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            app:mpb_progressStyle="circular"/>
        <TextView
            android:id="@+id/percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="0%" />
    </FrameLayout>
    <ImageView
        android:id="@+id/doPlay"
        android:layout_width="44dip"
        android:layout_height="44dip"
        android:layout_gravity="center"
        android:visibility="gone"
        android:src="@drawable/ic_baseline_play_circle_filled_24"
        android:contentDescription="@null" />
    <ImageView
        android:id="@+id/error"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_gravity="center"
        android:visibility="gone"
        android:src="@drawable/ic_baseline_error_outline_orange_24"
        android:contentDescription="@null" />
    <ImageView
        android:id="@+id/back"
        android:layout_width="44dip"
        android:layout_height="44dip"
        android:scaleType="center"
        android:src="@drawable/titlebar_back"
        android:contentDescription="@null"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:background="#33000000"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/play"
            android:layout_width="44dip"
            android:layout_height="44dip"
            android:scaleType="centerInside"
            android:src="@drawable/ic_play_arrow_white_36dp"
            android:contentDescription="@null" />
        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
            android:id="@+id/seekBar"
            android:layout_width="0dip"
            android:layout_height="31dip"
            android:layout_weight="1"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            app:dsb_indicatorColor="@color/md_blue_500"
            app:dsb_max="100"
            app:dsb_min="0"
            app:dsb_progressColor="@color/md_blue_500"
            app:dsb_rippleColor="@color/md_blue_100"
            app:dsb_scrubberHeight="2dp"
            app:dsb_thumbSize="0dp"
            app:dsb_trackColor="@color/md_grey_400"
            app:dsb_trackHeight="1dp"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="normal"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeTextType="uniform"
            app:fontFamily="@font/dincond"
            tools:text="00:00:00/00:00:01"/>

    </LinearLayout>
</FrameLayout>
