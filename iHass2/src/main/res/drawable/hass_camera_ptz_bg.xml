<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item
                android:top="0dp"
                android:bottom="0dip"
                android:left="0dip"
                android:right="0dip">
                <shape android:shape="oval" >
                    <gradient
                        android:angle="180"
                        android:endColor="#0F000000"
                        android:startColor="#0F000000" />
                    <corners
                        android:bottomLeftRadius="6dip"
                        android:bottomRightRadius="6dip"
                        android:topLeftRadius="6dip"
                        android:topRightRadius="6dip" />
                </shape>
            </item>
            <item
                android:top="2dip"
                android:left="2dp"
                android:right="2dp"
                android:bottom="2dp">
                <shape android:shape="oval" >
                    <gradient
                        android:angle="180"
                        android:endColor="#EEEEEE"
                        android:startColor="#EEEEEE" />
                    <corners
                        android:bottomLeftRadius="6dip"
                        android:bottomRightRadius="6dip"
                        android:topLeftRadius="6dip"
                        android:topRightRadius="6dip" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item
                android:top="0dp"
                android:bottom="0dip"
                android:left="0dip"
                android:right="0dip">
                <shape android:shape="oval" >
                    <gradient
                        android:angle="180"
                        android:endColor="#0F000000"
                        android:startColor="#0F000000" />
                    <corners
                        android:bottomLeftRadius="6dip"
                        android:bottomRightRadius="6dip"
                        android:topLeftRadius="6dip"
                        android:topRightRadius="6dip" />
                </shape>
            </item>
            <item
                android:top="2dip"
                android:left="2dp"
                android:right="2dp"
                android:bottom="2dp">
                <shape android:shape="oval" >
                    <gradient
                        android:angle="180"
                        android:endColor="#FFFFFF"
                        android:startColor="#FFFFFF" />
                    <corners
                        android:bottomLeftRadius="6dip"
                        android:bottomRightRadius="6dip"
                        android:topLeftRadius="6dip"
                        android:topRightRadius="6dip" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>