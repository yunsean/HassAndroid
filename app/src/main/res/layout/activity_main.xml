<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="#ffffff"
    android:orientation="vertical">

    <com.dylan.uiparts.tabhost.TabHost
        android:id="@+id/tabhost"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1">
                <FrameLayout android:id="@+id/hass" android:layout_width="fill_parent" android:layout_height="fill_parent"/>
                <FrameLayout android:id="@+id/web" android:layout_width="fill_parent" android:layout_height="fill_parent"/>
                <FrameLayout android:id="@+id/flow" android:layout_width="fill_parent" android:layout_height="fill_parent"/>
                <FrameLayout android:id="@+id/more" android:layout_width="fill_parent" android:layout_height="fill_parent"/>
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ffcccccc"/>

            <com.dylan.uiparts.tabhost.TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:gravity="center"
                android:paddingBottom="2dip"
                android:paddingTop="2dip"
                android:tag="tabs"/>
        </LinearLayout>
    </com.dylan.uiparts.tabhost.TabHost>
</LinearLayout>

