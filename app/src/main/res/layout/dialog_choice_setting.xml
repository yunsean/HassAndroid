<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dip"
    android:background="#00000000"
    android:gravity="center"
    android:orientation="vertical">
  	<Button 
        android:id="@+id/panels"
        android:layout_width="match_parent"
        android:layout_height="54dip"
        android:background="@drawable/selector_ffffff_eeeeee_round_10dp_lt_rt"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#ff007aff"
        android:text="面板管理"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#fff5f5f5"/>
    <Button
        android:id="@+id/shortcut"
        android:layout_width="match_parent"
        android:layout_height="54dip"
        android:background="@drawable/selector_ffffff_eeeeee"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#ff007aff"
        android:text="快捷按钮"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#fff5f5f5"/>
    <Button
        android:id="@+id/widget"
        android:layout_width="match_parent"
        android:layout_height="54dip"
        android:background="@drawable/selector_ffffff_eeeeee"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#ff007aff"
        android:text="小部件按钮"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#fff5f5f5"/>
    <Button
        android:id="@+id/setting"
        android:layout_width="match_parent"
        android:layout_height="54dip"
        android:background="@drawable/selector_ffffff_eeeeee_round_10dp_lb_rb"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#ff007aff"
        android:text="服务器设置"/>
    <Button 
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="54dip"
	    android:layout_marginTop="10dip"
        android:background="@drawable/selector_ffffff_eeeeee_round_10dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#ff007aff"
        android:text="取消"/>
</LinearLayout>
